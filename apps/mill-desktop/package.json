{
  "name": "mill-desktop",
  "version": "0.1.0",
  "private": true,
  "description": "Standalone Electron desktop app for managing bundled services",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\" \"npm:dev:run\"",
    "dev:renderer": "vite",
    "dev:electron": "tsc -p tsconfig.electron.json --watch --preserveWatchOutput",
    "dev:run": "wait-on dist-electron/electron/main.js && node scripts/dev-launch.js",
    "build": "vite build && tsc -p tsconfig.electron.json",
    "electron:build": "npm run build && electron-builder",
    "build:win-x64": "npm run electron:build -- --win nsis --x64",
    "build:mac-x64": "npm run electron:build -- --mac dmg zip --x64",
    "build:mac-arm64": "npm run electron:build -- --mac dmg zip --arm64",
    "build:linux-x64": "npm run electron:build -- --linux AppImage --x64",
    "build:linux-arm64": "npm run electron:build -- --linux AppImage --arm64"
  },
  "dependencies": {
    "@mantine/core": "latest",
    "@mantine/hooks": "latest",
    "@mantine/notifications": "latest",
    "js-yaml": "^4.1.1",
    "react": "latest",
    "react-dom": "latest",
    "react-icons": "latest"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@vitejs/plugin-react-swc": "latest",
    "concurrently": "latest",
    "cross-env": "latest",
    "electron": "latest",
    "electron-builder": "latest",
    "typescript": "latest",
    "vite": "latest",
    "wait-on": "latest"
  },
  "build": {
    "appId": "io.qpointz.milldesktop",
    "productName": "Mill Launcher",
    "executableName": "mill-desktop",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
